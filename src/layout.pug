mixin navbar
    .navbar-header
        button.navbar-toggle.collapsed(
            type='button'
            data-toggle='collapse'
            data-target='#js-navbar'
        )
            span.icon.icon-view-headline
        a.navbar-brand(href='/')

    #js-navbar.collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
            li.dropdown
                a.dropdown-toggle(href='#' data-toggle='dropdown') Tutorials
                ul.dropdown-menu
                    li: a(href='/tutorials/chatbot.html') Chat
                    li: a(href='/tutorials/rest.html') REST API
                    li: a(href='/tutorials/constellation.html') Constellation
            li.dropdown
                a.dropdown-toggle(href='#' data-toggle='dropdown') Reference
                ul.dropdown-menu
                    li: a(href='/reference/chat/index.html') Chat
                    li: a(href='/reference/interactive/index.html') Interactive
                    li: a(href='/reference/interactive_next/index.html') Custom Controls
                    li: a(href='/rest.html') REST API
                    li: a(href='/reference/constellation/index.html') Constellation
                    li: a(href='/reference/webhooks/index.html') Webhooks
                    li: a(href='/reference/oauth/index.html') OAuth
                    li: a(href='/reference/teststreams/index.html') Test Streams

            li: a(href='https://mixer.com/lab' target='_blank') Developer Lab

include ./mixins.pug

doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
        link(rel='apple-touch-icon-precomposed' sizes='144x144' href='/img/apple-touch-icon-144x144.png')
        link(rel='apple-touch-icon-precomposed' sizes='152x152' href='/img/apple-touch-icon-152x152.png')
        link(rel='shortcut icon' type='image/x-icon' href='/img/favicon.ico')
        link(rel='icon' type='image/png' href='/img/favicon-32x32.png' sizes='32x32')
        link(rel='icon' type='image/png' href='/img/favicon-16x16.png' sizes='16x16')

        link(href='https://fonts.googleapis.com/css?family=Heebo:100,300|Inconsolata:400,700|Open+Sans:400,300' rel='stylesheet')
        link(rel='stylesheet' href='/css/style.css')

        block head

        title
            block title

    body
        block navbar
            .navbar-wrapper
                .container
                    nav.navbar.navbar-inverse: +navbar()

        block outerContent
            .site-content
                block content

        block scripts
            +scripts()
